<div class="container">
    <img src="{{ section.settings.image | img_url: '700x' }}"/>
    <div class="right">
        <h3 class="section__heading">{{ section.settings.heading }}</h3>
        <p class="section__details">{{ section.settings.description }}</p>
    </div>
</div>

{% schema %}
{
    "name" : "Image with Text",
    "settings" : [
        {
            "type" : "image_picker",
            "id" : "image",
            "label" : "Image"
        },
        {
            "type" : "text",
            "id" : "heading",
            "label" : "Heading text" 
        },
        {
            "type" : "text",
            "id" : "description",
            "label" : "Description text" 
        }
    ]
}
{% endschema %}

{% style %}
.container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    max-width: 130rem;
    margin: 10rem auto;
}

.right {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1.5rem;
}

.section__heading {
    font-size: 4rem;
}

.section__details {
    font-size: 1.6rem;
    line-height: 1.2;
}
{% endstyle %}